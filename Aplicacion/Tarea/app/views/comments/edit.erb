<h2>Edit Comment</h2>

<%= form_with model: [@forum, @comment], local: true do |form| %>
  <div class="form-group">
    <%= form.label :content %>
    <%= form.text_area :content, class: "form-control" %>
  </div>
  <%= form.submit 'Update Comment', class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back to Forum', forum_path(@forum), class: 'btn btn-secondary' %>
