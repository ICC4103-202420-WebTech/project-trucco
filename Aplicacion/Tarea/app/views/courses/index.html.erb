<div class="container mt-4">
  <h1>All Courses</h1>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title"><%= link_to course.title, course_path(course) %></h5>
            <p class="card-text"><%= truncate(course.description, length: 100) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
