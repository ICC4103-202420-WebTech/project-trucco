<div class="container mt-4">
  <h1>Create New Course</h1>

  <%= form_with(model: @course, local: true) do |form| %>
    <div class="mb-3">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :description %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :instructor_id %>
      <%= form.collection_select :instructor_id, User.where(role: 'instructor'), :id, :name, prompt: 'Select Instructor', class: 'form-control' %>
    </div>

    <%= form.submit 'Create Course', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back to Courses', courses_path, class: 'btn btn-secondary mt-3' %>
</div>
