<%= form_with(model: [@course, @enrollment], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: 'Select a student', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :progress_percentage %>
    <%= form.number_field :progress_percentage, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
