<div class="container mt-4">
  <h1><%= @lesson.title %></h1>

  <% if @lesson.content_type == "video" %>
    <!-- If it's a video, embed the YouTube video -->
    <div class="embed-responsive embed-responsive-16by9">
      <iframe class="embed-responsive-item" src="<%= @lesson.content %>" allowfullscreen></iframe>
    </div>
  <% else %>
    <!-- If it's written content, render the ActionText content -->
    <div>
      <%= @lesson.content_rich_text.body %>
    </div>
  <% end %>
</div>
