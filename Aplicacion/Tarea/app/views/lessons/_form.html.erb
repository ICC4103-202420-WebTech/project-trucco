<%= form_with(model: [@course, lesson], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content_type %>
    <%= form.select :content_type, ['written', 'video'], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :content_rich_text %>
    <%= form.rich_text_area :content_rich_text, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
