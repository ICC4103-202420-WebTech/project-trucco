<div class="jumbotron text-center">
  <h1>Welcome to Assignment</h1>
  <p>Find the best courses and improve your skills!</p>

  <% if user_signed_in? %>
    <p>
      Logged in as <%= current_user.name %>. 
      <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: 'btn btn-danger' %>
    </p>
  <% else %>
    <%= link_to 'Login', new_user_session_path, class: 'btn btn-primary' %>
  <% end %>
</div>

<div class="row">
  <div class="col-md-12">
    <h2>Latest Courses</h2>
  </div>

  <% @courses.each do |course| %>
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-body">
          <% if user_signed_in? %>
            <h5 class="card-title"><%= link_to course.title, course_path(course) %></h5>
          <% else %>
            <h5 class="card-title"><%= course.title%></h5>
          <% end %>
          <p class="card-text"><%= truncate(course.description, length: 100) %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
